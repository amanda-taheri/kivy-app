<ContentNavigationDrawer>:

    ScrollView:

        MDList:
            TwoLineAvatarListItem:
                text: "Hippocampus"
                secondary_text: "A Journey to Excellence"
                height:
                    "100 dp"

                ImageLeftWidget:
                    source: "img/logo.jpg"
            OneLineIconListItem:
                text: "Main Page"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 0"
                IconLeftWidget:
                    icon: "home-circle"

            OneLineIconListItem:
                text: "Profile"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 1"
                IconLeftWidget:
                    icon: "account-circle"

            OneLineIconListItem:
                text: "Daily Plan"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 2"
                IconLeftWidget:
                    icon: "notebook-check"
            OneLineIconListItem:
                text: "My Scores"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 3"
                IconLeftWidget:
                    icon: "dice-d20"
            OneLineIconListItem:
                text: "Percentage of tests"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 4"
                IconLeftWidget:
                    icon: "percent"
            OneLineIconListItem:
                text: "Lessons"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 5"
                IconLeftWidget:
                    icon: "book-open-page-variant"
            OneLineIconListItem:
                text: "Recieve consulting time"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 6"
                IconLeftWidget:
                    icon: "timetable"
            OneLineIconListItem:
                text: "Rest Time"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 8"
                IconLeftWidget:
                    icon: "gamepad-variant"
            OneLineIconListItem:
                text: "About us"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 7"
                IconLeftWidget:
                    icon: "card-account-details"
Screen:

    MDToolbar:
        md_bg_color: 75/255 , 131/255 , 108/255 , 1
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Hippocampus"
        canvas:
            Rectangle:
                source: 'img/logo.jpg'
                pos: (((self.parent.size[0])/2)-30,self.pos[1])
                size: (60, 60)
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        right_action_items: [["dots-vertical", lambda x: app.callback(x), "contact"]]

    MDNavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager
            Screen:
                name: "scr 0"
                MDLabel:
                    text: "Screen 1"
                    halign: "center"
            Screen:
                name: "scr 1"

                MDLabel:
                    text: "Screen 1"
                    halign: "center"

            Screen:
                name: "scr 2"

                MDLabel:
                    text: "Screen 2"
                    halign: "center"


            Screen:
                name: "scr 3"

                MDLabel:
                    text: "Screen 3"
                    halign: "center"
            Screen:
                name: "scr 4"

                MDLabel:
                    text: "Screen 4"
                    halign: "center"
            Screen:
                name: "scr 5"

                MDLabel:
                    text: "Screen 5"
                    halign: "center"
            Screen:
                name: "scr 6"

                MDLabel:
                    text: "Screen 6"
                    halign: "center"
            Screen:
                name: "scr 7"

                MDLabel:
                    text: "Screen 7"
                    halign: "center"

            Screen:
                name: "scr 8"
                MDLabel:
                    text: "Screen 8"
                    halign: "center"


    MDNavigationDrawer:
        id: nav_drawer

        ContentNavigationDrawer:
            screen_manager: screen_manager
            nav_drawer: nav_drawer   